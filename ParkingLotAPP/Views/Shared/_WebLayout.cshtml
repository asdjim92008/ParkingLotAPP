<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoosafeParking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bar-bg border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="color:#FFF;">GoosafeParking</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <img class="menubar" style="width: 30px;" src="~/images/menubar.png" />
                    </span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="navbar-text">
                            <a class="nav-link" style="cursor: pointer;color:#FFF;" onclick="javascript:if(confirm('確定要登出嗎?_?')==1) {return Logout()}">登出</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
            @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <script>
        function Logout() {;
            $.ajax({
                type: 'GET',
                url: "/api/Data_SQL/Logout",
                dataType: 'json',
                async: true,
                success: function (response) {
                    if (response.ErrMsg != null) {
                        alert('尚未登入!!');
                        window.location = "/Login/Index";
                    }
                    else {
                        alert('登出成功!!');
                        window.location = "/Login/Index";
                    }
                },
                error: function () {
                    alert('登出失敗!!');
                }
            });
        }
    </script>
</body>
</html>
