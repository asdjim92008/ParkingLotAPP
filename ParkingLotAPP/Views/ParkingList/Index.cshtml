@{
    Layout = "_WebLayout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ParkingList.css">
}
@section Scripts{
    <script src="~/js/ParkingList.js" asp-append-version="true"></script>
}
<table>
    <!-- container -->
    <tr>
        <td>
            <div class="row">
                <table class="cards-list" style="table-layout:fixed;" cellspacing="5">
                    <!-- PLtitle -->
                    <tr>
                        <td colspan="2">
                            <section>
                                <a>
                                    <center>
                                        <div class="companyname" id="companyname">

                                        </div>
                                        <br>
                                        <div id="clock" class="clock">
                                            <script type="text/javascript">
                                                setInterval("setClock()", 1000);//1秒更新一次
                                                function setClock() {
                                                    var date = new Date();
                                                    var today = date.getFullYear() + "年" + (date.getMonth() + 1) + "月" + date.getDate() + "日";
                                                    let hh = date.getHours();
                                                    let mm = date.getMinutes();
                                                    let ss = date.getSeconds();
                                                    if (hh < 10) {
                                                        hh = '0' + date.getHours();
                                                    }
                                                    if (mm < 10) {
                                                        mm = '0' + date.getMinutes();
                                                    }
                                                    if (ss < 10) {
                                                        ss = '0' + date.getSeconds();
                                                    }

                                                    const dayName = ["日", "一", "二", "三", "四", "五", "六"]

                                                    let day = `${dayName[date.getDay()]}`;

                                                    let timeNow = hh + ":" + mm + ":" + ss;
                                                    document.getElementById("clock").innerText = today + "   " + "星期"
                                                        + day + "   " + timeNow;
                                                }
                                            </script>
                                        </div>
                                    </center>
                                </a>
                            </section>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="textop">停車場列表</div>
                        </td>
                    </tr>
                    <!-- PLlist -->
                    <tbody id="PLlist">
                    </tbody>
                </table>
            </div>
        </td>
    </tr>
</table>